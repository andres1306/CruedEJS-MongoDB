  </div>
  <div class="container">
    <table class="table" style="margin-top: 40px;">
      <thead class="thead-dark">
        <tr>
          <th class="text-center"> # </th>
          <th class="text-center"> Documento</th>
          <th class="text-center"> Nombre</th>
          <th class="text-center"> Telefono</th>
          <th class="text-center"> Pan</th>
          <th class="text-center"> Cantidad</th>
          <th class="text-center"> Precio</th>
          <th class="text-center"> Direccion</th>
          <th class="text-center" class="text-center"> Actions</th>
        </tr>
      </thead>
    <tbody>
      <% for(var i=0; i< PEDIDOS.length; i++) { %>
      <tr>
        <td class="text-center"> <%= i+1 %></td>
        <td class="text-center"><%= PEDIDOS[i].Documento %></td>
        <td class="text-center"><%= PEDIDOS[i].Nombre %></td> 
        <td class="text-center"><%= PEDIDOS[i].Telefono%></td>
        <td class="text-center"><%= PEDIDOS[i].pan%></td>
        <td class="text-center"><%= PEDIDOS[i].cantidad%></td>
        <td class="text-center"><%= PEDIDOS[i].precio%></td>
        <td class="text-center"><%= PEDIDOS[i].Direccion%></td>
        <td class="text-center"> <a onclick="confirmar(<%= PEDIDOS[i].Documento%>)" class="btn btn-danger"> Eliminar</a> 
        <a href="/edit/<%= PEDIDOS[i]._id%>" class="btn btn-success">Edit</a>
        <!--
          <button href="" onclick="confirmar(<%= PEDIDOS[i].Documento%>)" class="btn btn-success"> aler t</button>
        -->
      </td>
      </tr>
      <% } %>
      </tbody>
    </table>
  </div>
</body>
</html>
<style>
input:focus {
  background: #DFF6FF;
}
