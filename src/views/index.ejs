<%- include('partials/header');%>

<div class="container">
  <form action="/add" method="post">
  <div class="row border border-dark rounded col-8 offset-2" style="background: #EFEFEF;">
      <div class="col-2 offset-2">
        <label for="">Nombre</label><br>
        <input type="text" placeholder="Nombre" name="Nombre">
        <label for="">Direccion</label>
        <input type="text" name="Direccion" id=""placeholder="cll00 #00-00 " name="Direccion"><br>
        <label for="">Pan</label><br>
        <select name="pan">
          <optgroup label="panes">
            <option>Panqueso </option>
            <option>Pan debono</option>
            <option>Bu√±uelos</option>
            <option>pan de yuca </option>
            <option>Pancerotis</option>
            <option>Pan de canela</option>
           </optgroup>
          </optgroup>
        </select><br>

      </div>

      <div class="col-2 offset-2">  
        <label for="">Documento</label> <br>
        <input type="text"name="Documento" placeholder="321654987"> <br>
        <label for="">Telefono</label> <br>
